<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>src/logs.log</file>

        <encoder>
            <pattern>%date %level [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <root>
        <appender-ref ref="FILE" />
    </root>
</configuration>